<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/newsapi"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your News"
                android:fontFamily="@font/chomskyfont"
                android:textSize="60dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By:Shrihith"
                android:fontFamily="@font/chomskyfont"
                android:layout_gravity="center_horizontal"
                android:textSize="25dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/alegreya"
                android:text="Powered by NewsAPI"
                android:textColor="@color/black"
                android:textSize="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="10dp">

                <RadioButton
                    android:id="@+id/business"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya"
                    android:text="Business"
                    android:textColor="@color/black"/>

                <RadioButton
                    android:id="@+id/entertainment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entertainment"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/black"/>

                <RadioButton
                    android:id="@+id/general"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="General"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/black"/>

                <RadioButton
                    android:id="@+id/health"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Health"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/black"/>

                <RadioButton
                    android:id="@+id/science"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Science"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/black"/>

                <RadioButton
                    android:id="@+id/sports"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sports"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/black"/>

                <RadioButton
                    android:id="@+id/technology"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Technology"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/black"/>

                <RadioButton
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Country"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/black"/>

                <RadioButton
                    android:id="@+id/newsA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="News Agency"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/black"/>

                <RadioButton
                    android:id="@+id/people"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="People"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/black"/>

            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="360dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/countryET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text"
                    android:text=""
                    android:fontFamily="@font/alegreya"
                    android:hint="Country"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/newsAgencyET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text"
                    android:text=""
                    android:fontFamily="@font/alegreya"
                    android:hint="News Agency"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/peopleET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text"
                    android:text=""
                    android:fontFamily="@font/alegreya"
                    android:hint="Person"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/NewsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="News"
                android:textSize="20dp"
                android:fontFamily="@font/chomskyfont"
                android:textColor="@color/black"/>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/alegreya">

                <TextView
                    android:id="@+id/na1"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Pick a Topic!"
                    android:textSize="7dp"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/ti1"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Pick a Topic!"
                    android:textSize="7dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/bt1"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Info"
                    android:fontFamily="@font/alegreya"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/alegreya">

                <TextView
                    android:id="@+id/na2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Pick a Topic!"
                    android:textSize="7dp"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/ti2"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Pick a Topic!"
                    android:textSize="7dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/bt2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Info"
                    android:fontFamily="@font/alegreya"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:id="@+id/na3"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Pick a Topic!"
                    android:textSize="7dp"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/ti3"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Pick a Topic!"
                    android:textSize="7dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/bt3"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Info"
                    android:fontFamily="@font/alegreya"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:id="@+id/na4"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Pick a Topic!"
                    android:textSize="7dp"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/ti4"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Pick a Topic!"
                    android:textSize="7dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/bt4"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Info"
                    android:fontFamily="@font/alegreya"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:id="@+id/na5"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Pick a Topic!"
                    android:textSize="7dp"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/ti5"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Pick a Topic!"
                    android:textSize="7dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/alegreya"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/bt5"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Info"
                    android:fontFamily="@font/alegreya"/>
            </LinearLayout>

            <TextView
                android:id="@+id/DescriptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/chomskyfont"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click on an info button to find out more about an article."
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/alegreya"
                android:textColor="@color/black"/>

        </LinearLayout>

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </ViewFlipper>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="nextView"
        android:fontFamily="@font/chomskyfont"
        android:layout_marginEnd="5dp"/>

    <Button
        android:id="@+id/previousButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/chomskyfont"
        android:onClick="previousView"
        android:text="Previous"
        android:layout_marginStart="5dp"/>
</RelativeLayout>